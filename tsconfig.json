{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
		"target": "es5",
    "module": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"baseUrl": ".",
		"allowJs": true,
		"skipLibCheck": true,
    "strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "noUnusedLocals": true,
    "moduleResolution": "node",
		"outDir": "dist"
  },
	"files": [
		"src/index.ts"
	]
}
