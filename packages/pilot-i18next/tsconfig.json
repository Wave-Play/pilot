{
	"include": ["src"],
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"types": [
			"node"
		],
		"baseUrl": ".",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"strictNullChecks": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "preserve",
		"importHelpers": true,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "./src",
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"outDir": "dist"
	}
}
