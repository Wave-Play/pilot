{
	"name": "@waveplay/pilot",
	"version": "0.0.0-development",
	"private": false,
	"description": "NextJS-like routing for React Native",
	"repository": {
		"type": "git",
		"url": "https://github.com/Wave-Play/pilot.git"
	},
	"engines": {
		"node": ">=12"
	},
	"license": "MIT",
	"author": "WavePlay <dev@waveplay.com> (waveplay.com)",
	"contributors": [
		"Pkmmte Xeleon <pk@waveplay.com>"
	],
	"sideEffects": false,
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"release": {
		"branches": [
			"main",
			"next"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"src/",
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsup && tsup src/cli.ts src/_generated.ts --format cjs",
		"semantic-release": "semantic-release"
	},
	"bin": {
		"pilot": "dist/cli.js"
	},
	"dependencies": {
		"jotai": "1.8.5",
		"node-match-path": "0.6.3",
		"pino": "8.6.1",
		"pino-pretty": "9.1.1",
		"radix3": "0.2.1",
		"tiny-lru": "9.0.3"
	},
	"peerDependencies": {
		"next": ">=11.0.0",
		"react": ">=16.8",
		"react-native": ">=0.64.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-react-jsx": "7.19.0",
		"@swc/core": "1.3.8",
		"@types/benchmark": "2.1.2",
		"@types/klaw": "3.0.3",
		"@types/node": "18.11.0",
		"@types/react": "18.0.21",
		"@types/react-native": "0.70.4",
		"@typescript-eslint/eslint-plugin": "5.40.0",
		"@typescript-eslint/parser": "5.40.0",
		"app-root-path": "3.1.0",
		"benchmark": "2.1.4",
		"commander": "9.4.1",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-jest": "27.1.2",
		"eval": "^0.1.8",
		"fs-extra": "10.1.0",
		"klaw": "4.0.1",
		"next": "12.3.1",
		"semantic-release": "19.0.5",
		"semantic-release-cli": "5.4.4",
		"tsup": "6.2.3",
		"typescript": "4.8.4"
	},
	"eslint": {
		"env": {
			"es6": true,
			"jest": true,
			"node": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": 2019,
			"sourceType": "module"
		},
		"extends": [
			"eslint:recommended",
			"plugin:jest/recommended",
			"plugin:import/recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"arrow-body-style": [
				"error",
				"always"
			],
			"curly": "error",
			"import/order": [
				"error",
				{
					"newlines-between": "always"
				}
			]
		},
		"settings": {
			"import/extensions": [
				".ts"
			],
			"import/resolver": {
				"node": {
					"extensions": [
						".ts"
					]
				}
			}
		}
	}
}
